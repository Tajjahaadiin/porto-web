{{#>layout title="Testimonial" }}

  <main class='mb-5 my-5'>
    <h2 class="text-center my-5 fs-1" style="font-family: 'Anton',serif;">My Testimonials</h2>
    <h4 class='text-center mb-3 fs-3'>Rating By Star</h4>
    <div class='container-sm text-center d-flex flex-row justify-content-center gap-3 '>
      <button onclick='showAllTestimonials()' type='button' class='btn btn-orange'>
        All
      </button>
      <button type='button' onclick='testimonial' class='btn btn-orange'>
        1 <i class="fa-solid fa-star"></i>
      </button>
      <button type='button' onclick='filterTestimonialByStar(2)' id="buttonStar2" class='btn btn-orange'>
        2<i class="fa-solid fa-star"></i>
      </button>
      <button type='button' onclick='filterTestimonialByStar(3)' class='btn btn-orange'>
        3<i class="fa-solid fa-star"></i>
      </button>
      <button type='button' onclick='filterTestimonialByStar(4)' class='btn btn-orange'>
        4<i class="fa-solid fa-star"></i>
      </button>
      <button type='button' onclick='filterTestimonialByStar(5)' class='btn btn-orange'>
        5<i class="fa-solid fa-star"></i>
      </button>
    </div>
    <div class="container-fluid mx-auto px-5 mt-4 row row-cols-md-3 ">
      {{#each data}}
        <div class="d-flex col-md-4 col-sm-6">
          <div id="testimonialsCard" class="card-testimonials col pb-2 px-3 col mx-0 my-3 ">
            <div class="header-testimonials ">
              <div class="image-testimonials">
                <img src="{{this.image}}" alt="">
              </div>
              <div>
                <div class="stars-testimonials">
                  <i class="fa-solid fa-star"></i>
                  <i class="fa-solid fa-star"></i>
                  <i class="fa-solid fa-star"></i>
                  <i class="fa-solid fa-star"></i>
                  <i class="fa-solid fa-star"></i>
                </div>
                <p class="name-testimonials"> {{this.author}}| <span class="time-testimonials">2 days ago</span> </p>
              </div>
            </div>
            <p class="message-testimonials">
              {{this.content}}
            </p>
          </div>
        </div>
      {{/each}}
    </div>

    <div id='testimonialsContainer' class='container-fluid mx-auto px-5 mt-4 row row-cols-md-3'>
      <p>No testimonials.</p>
    </div>
  </main>

  <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js'
    integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM'
    crossorigin='anonymous'></script>
  <script src='./assets/javascript/testimonial.js'></script>
  <script src="../utils/testimonials.js"></script>
  <script>
    const button = document.getElementById('buttonStar2');
    button.addEventListener('click', () => {
      // Di sini Anda bisa memanggil fungsi yang diinginkan

      handleClick();
    });
  </script>
{{/layout }}