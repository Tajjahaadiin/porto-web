{{#>layout title="Testimonial" }}

  <main class='mb-5 my-5'>
    <h2 class="text-center my-5 fs-1" style="font-family: 'Anton',serif;">My Testimonials</h2>
    <h4 class='text-center mb-3 fs-3'>Rating By Star</h4>
    <div class='container-sm text-center d-flex flex-row justify-content-center gap-3 '>
      <button onclick='showAllTestimonials()' type='button' class='btn btn-orange'>
        All
      </button>
      <button type='button' onclick='filterTestimonialByStar(1)' class='btn btn-orange'>
        1 <i class="fa-solid fa-star"></i>
      </button>
      <button type='button' onclick='filterTestimonialByStar(2)' class='btn btn-orange'>
        2<i class="fa-solid fa-star"></i>
      </button>
      <button type='button' onclick='filterTestimonialByStar(3)' class='btn btn-orange'>
        3<i class="fa-solid fa-star"></i>
      </button>
      <button type='button' onclick='filterTestimonialByStar(4)' class='btn btn-orange'>
        4<i class="fa-solid fa-star"></i>
      </button>
      <button type='button' onclick='filterTestimonialByStar(5)' class='btn btn-orange'>
        5<i class="fa-solid fa-star"></i>
      </button>
    </div>
    <div class=" container-fluid mx-auto px-5 mt-4  ">
      <div id="testimonialsContainer" class="row row-cols-md3 gap-4 ">
      </div>
    </div>
  </main>
  <p>{{data}}</p>
  <script src='./assets/scripts/testimonial.js'></script>

  <script>

  </script>
{{/layout }}